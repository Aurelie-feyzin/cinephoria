{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "cinephoria_desktop",
  "version": "1.0.0",
  "identifier": "cinephoria",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:4000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "cinephoria",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
